<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= Produto.where("departamento_id = ?", departamento).count %></td>
        <td><%= button_to "Ver produtos do departamento", departamento, method: :get, class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_departamento_path(departamento), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', departamento, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo departamento', new_departamento_path, class:"btn btn-default" %>
